@model Model.Property
@{
    ViewData["Title"] = "Edit Property";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="Update" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Number" class="control-label"></label>
                    <input asp-for="Number" class="form-control" />
                    <span asp-validation-for="Number" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Category.Id" class="control-label">Category</label>
                    <select asp-for="Category.Id" class="form-control" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))">
                        <option value="">Select a category</option>
                    </select>
                    <span asp-validation-for="Category.Id" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ForSale" class="control-label"></label>
                    <select asp-for="ForSale" class="form-control">
                        <option value="true">For Sale</option>
                        <option value="false">For Rent</option>
                    </select>
                    <span asp-validation-for="ForSale" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="BedroomCount" class="control-label"></label>
                    <input asp-for="BedroomCount" class="form-control" type="number" min="0" />
                    <span asp-validation-for="BedroomCount" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="GarageSpots" class="control-label"></label>
                    <input asp-for="GarageSpots" class="form-control" type="number" min="0" />
                    <span asp-validation-for="GarageSpots" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="BathroomCount" class="control-label"></label>
                    <input asp-for="BathroomCount" class="form-control" type="number" min="0" />
                    <span asp-validation-for="BathroomCount" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" type="number" step="0.01" min="0" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
        </div>

        <h4 class="mt-4">Address</h4>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Address.Street" class="control-label">Street/Avenue</label>
                    <input asp-for="Address.Street" class="form-control" />
                    <span asp-validation-for="Address.Street" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Address.City" class="control-label">City</label>
                    <input asp-for="Address.City" class="form-control" />
                    <span asp-validation-for="Address.City" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Address.State_Province" class="control-label">State</label>
                    <input asp-for="Address.State_Province" class="form-control" />
                    <span asp-validation-for="Address.State_Province" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Address.Postal_Code" class="control-label">Postal Code</label>
                    <input asp-for="Address.Postal_Code" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="Address.Country" class="control-label">Country</label>
                    <input asp-for="Address.Country" class="form-control" value="Brazil" />
                    <span asp-validation-for="Address.Country" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group mt-4">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
