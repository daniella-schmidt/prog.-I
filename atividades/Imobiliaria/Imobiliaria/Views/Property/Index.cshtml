@model List<Model.Property>
@{
    ViewData["Title"] = "Property List";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <div class="d-flex justify-content-between mb-3">
        <div>
            <a asp-action="Create" class="btn btn-primary">Register New Property</a>
        </div>
        <div>
            <a asp-action="ExportDelimitedFileWithSave" class="btn btn-success">Export to TXT</a>
            <a asp-action="ExportFixedFileWithSave" class="btn btn-info">Export Fixed Format</a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="card mb-4">
        <div class="card-header">
            <h5>Filters</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <form asp-action="FilterByCategory" method="get">
                        <div class="form-group">
                            <label for="categoryId">Filter by Category:</label>
                            <select name="categoryId" id="categoryId" class="form-control"
                                    asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))">
                                <option value="">All Categories</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary">Filter</button>
                    </form>
                </div>
                <div class="col-md-6">
                    <div class="btn-group">
                        <a asp-action="FilterByType" asp-route-forSale="true" class="btn btn-outline-primary">Sale</a>
                        <a asp-action="FilterByType" asp-route-forSale="false" class="btn btn-outline-primary">Rent</a>
                        <a asp-action="Index" class="btn btn-outline-secondary">All</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h5>Statistics</h5>
        </div>
        <div class="card-body">
            <div class="row">
                @foreach (var stat in ViewBag.Statistics)
                {
                    <div class="col-md-3 mb-2">
                        <div class="card">
                            <div class="card-body text-center">
                                <h6 class="card-title">@stat.Key</h6>
                                <p class="card-text display-4">@stat.Value</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Number</th>
                <th>Name</th>
                <th>Category</th>
                <th>Address</th>
                <th>Bedrooms</th>
                <th>Garage Spots</th>
                <th>Bathrooms</th>
                <th>Value</th>
                <th>Type</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var property in Model)
            {
                <tr>
                    <td>@property.Id</td>
                    <td>@property.Number</td>
                    <td>@property.Name</td>
                    <td>@property.Category?.Name</td>
                    <td>@property.Address?.GetShortAddress()</td>
                    <td>@property.BedroomCount</td>
                    <td>@property.GarageSpots</td>
                    <td>@property.BathroomCount</td>
                    <td>@property.Price.ToString("C")</td>
                    <td>@(property.ForSale ? "Sale" : "Rent")</td>
                    <td>
                        @if (property.SoldOrRented)
                        {
                            <span class="badge badge-success">@(property.ForSale ? "Sold" : "Rented")</span>
                        }
                        else if (property.InterestedClients?.Count > 0)
                        {
                            <span class="badge badge-warning">@property.InterestedClients.Count interest(s)</span>
                        }
                        else
                        {
                            <span class="badge badge-secondary">Available</span>
                        }
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Details" asp-route-id="@property.Id" class="btn btn-info btn-sm">Details</a>
                            <a asp-action="Update" asp-route-id="@property.Id" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-action="Delete" asp-route-id="@property.Id" class="btn btn-danger btn-sm">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
