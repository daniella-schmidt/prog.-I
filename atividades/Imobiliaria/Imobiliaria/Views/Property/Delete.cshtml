@model Model.Property
@{
    ViewData["Title"] = "Delete Property";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <h3>Are you sure you want to delete this property?</h3>

    <div class="card">
        <div class="card-header bg-danger text-white">
            <h4>@Model.Name</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">ID:</dt>
                <dd class="col-sm-8">@Model.Id</dd>

                <dt class="col-sm-4">Number:</dt>
                <dd class="col-sm-8">@Model.Number</dd>

                <dt class="col-sm-4">Category:</dt>
                <dd class="col-sm-8">@Model.Category?.Name</dd>

                <dt class="col-sm-4">Type:</dt>
                <dd class="col-sm-8">@(Model.ForSale ? "Sale" : "Rent")</dd>

                <dt class="col-sm-4">Value:</dt>
                <dd class="col-sm-8">@Model.Price.ToString("C")</dd>

                <dt class="col-sm-4">Address:</dt>
                <dd class="col-sm-8">@Model.Address?.GetShortAddress()</dd>
            </dl>
        </div>
        <div class="card-footer">
            <form asp-action="ConfirmDelete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Confirm Deletion</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
