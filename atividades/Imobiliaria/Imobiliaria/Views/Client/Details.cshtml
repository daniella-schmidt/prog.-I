@model Model.Client
@{
    ViewData["Title"] = "Detalhes do Cliente";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white py-4">
                    <div class="d-flex align-items-center">
                        <div>
                            <h3 class="mb-0">@Model.Name</h3>
                            <small class="opacity-75">
                                <i class="bi bi-hash me-1"></i>
                                ID: @Model.Id
                            </small>
                        </div>
                    </div>
                </div>

                <div class="card-body p-4">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="info-item">
                                <div class="d-flex align-items-center mb-2">
                                    <strong class="ms-3">Email</strong>
                                </div>
                                <div class="ms-5">
                                    <a href="mailto:@Model.Email" class="text-decoration-none">
                                        @Model.Email
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="info-item">
                                <div class="d-flex align-items-center mb-2">
                                    <strong class="ms-3">Telefone</strong>
                                </div>
                                <div class="ms-5">
                                    <a href="tel:@Model.Phone" class="text-decoration-none">
                                        @Model.Phone
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="info-item">
                                <div class="d-flex align-items-center mb-2">
                                    </div>
                                    <strong class="ms-3">CPF</strong>
                                </div>
                                <div class="ms-5">
                                    <code class="bg-light px-3 py-2 rounded fs-6">@Model.CPF</code>
                                </div>
                            </div>
                        </div>
                        
                    </div>
                </div>

                <div class="card-footer py-3">
                    <div class="d-flex gap-2 justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i>
                            Voltar
                        </a>
                        <div class="btn-group">
                            <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-primary">
                                <i class="bi bi-pencil me-1"></i>
                                Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                                <i class="bi bi-trash me-1"></i>
                                Excluir
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="text-center mt-3">
                <small class="text-muted">
                    <i class="bi bi-info-circle me-1"></i>
                    Informações do cliente
                </small>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-lg {
        width: 64px;
        height: 64px;
    }
    .card-header {
        background: linear-gradient(135deg, #0d6efd 0%, #0056b3 100%);
    }

    .btn-primary {
        background: #0d6efd;
        border: none;
    }
</style>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}