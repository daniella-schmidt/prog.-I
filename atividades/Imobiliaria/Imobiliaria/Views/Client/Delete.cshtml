@model Model.Client
@{
    ViewData["Title"] = "Delete Client";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <h3 class="text-danger">Are you sure you want to delete this client?</h3>

    <div class="card border-danger">
        <div class="card-header bg-danger text-white">
            <h4>@Model.Name</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Email:</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Phone:</dt>
                <dd class="col-sm-9">@Model.Phone</dd>

                <dt class="col-sm-3">CPF:</dt>
                <dd class="col-sm-9">@Model.CPF</dd>

                <dt class="col-sm-3">Interests:</dt>
                <dd class="col-sm-9">@(Model.InterestedProperties?.Count ?? 0) properties</dd>
            </dl>
        </div>
        <div class="card-footer">
            <form asp-action="ConfirmDelete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Confirm Deletion</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>