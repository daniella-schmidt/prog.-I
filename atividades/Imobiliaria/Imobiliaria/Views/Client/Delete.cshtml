@model Model.Client
@{
    ViewData["Title"] = "Excluir Cliente";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-lg border-danger">
                <div class="card-header bg-danger text-white py-3">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-trash fs-4 me-3"></i>
                        <div>
                            <h4 class="mb-0">@ViewData["Title"]</h4>
                            <small class="opacity-75">Esta ação não pode ser desfeita</small>
                        </div>
                    </div>
                </div>

                <div class="card-body p-4">
                    <div class="alert alert-danger d-flex align-items-start mb-4">
                        <i class="bi bi-exclamation-triangle-fill fs-5 me-3 mt-1"></i>
                        <div>
                            <strong>Atenção!</strong><br>
                            Tem certeza que deseja excluir este cliente permanentemente?
                        </div>
                    </div>

                    <div class="card bg-light border-0">
                        <div class="card-header bg-white border-bottom">
                            <h5 class="mb-0 d-flex align-items-center text-white">
                                @Model.Name
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="d-flex align-items-center mb-2">
                                        <strong>Email:</strong>
                                    </div>
                                    <p class="mb-0 ms-4">@Model.Email</p>
                                </div>
                                <div class="col-md-6">
                                    <div class="d-flex align-items-center mb-2">
                                        <strong>Telefone:</strong>
                                    </div>
                                    <p class="mb-0 ms-4">@Model.Phone</p>
                                </div>
                                <div class="col-md-6">
                                    <div class="d-flex align-items-center mb-2">
                                        <strong>CPF:</strong>
                                    </div>
                                    <p class="mb-0 ms-4">
                                        <code class="bg-light px-2 py-1 rounded">@Model.CPF</code>
                                    </p>
                                </div>
                                <div class="col-md-6">
                                    <div class="d-flex align-items-center mb-2">
                                        <strong>ID:</strong>
                                    </div>
                                    <p class="mb-0 ms-4">#@Model.Id</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <form asp-action="ConfirmDelete" method="post" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <hr class="my-4">
                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-1"></i>
                                Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Confirma a exclusão deste cliente?')">
                                <i class="bi bi-trash me-1"></i>
                                Excluir
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-3">
                <small class="text-muted">
                    <i class="bi bi-shield-exclamation me-1"></i>
                    Esta ação é irreversível
                </small>
            </div>
        </div>
    </div>
</div>

<style>
    .card-header {
        background: linear-gradient(135deg, #dc3545 0%, #b02a37 100%);
    }

    .btn-danger {
        background: #dc3545 0%;
        border: none;
    }

    .alert-danger {
        background: linear-gradient(135deg, #f8d7da 0%, #f1c2c7 100%);
        border: 1px solid #f5c2c7;
    }

    .card {
        border-radius: 15px;
        overflow: hidden;
    }
</style>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}