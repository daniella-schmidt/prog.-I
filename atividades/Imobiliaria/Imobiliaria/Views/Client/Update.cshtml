@model Model.Client
@{
    ViewData["Title"] = "Editar Cliente";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-warning py-4">
                    <div class="d-flex align-items-center">
                        <div>
                            <h3 class="mb-0">Editar Cliente</h3>
                            <small class="opacity-75">
                                <i class="bi bi-hash me-1"></i>
                                ID: @Model.Id
                            </small>
                        </div>
                    </div>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Update" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Name" class="form-control" placeholder="Nome completo" />
                                    <label asp-for="Name" class="ms-2">
                                        Nome completo
                                    </label>
                                    <span asp-validation-for="Name" class="text-danger small ms-3"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Email" type="email" class="form-control" placeholder="Email" />
                                    <label asp-for="Email" class="ms-2">
                                        Email
                                    </label>
                                    <span asp-validation-for="Email" class="text-danger small ms-3"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Phone" class="form-control" placeholder="Telefone" />
                                    <label asp-for="Phone" class="ms-2">
                                        Telefone
                                    </label>
                                    <span asp-validation-for="Phone" class="text-danger small ms-3"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="CPF" class="form-control" placeholder="CPF" readonly />
                                    <label asp-for="CPF" class="ms-2">
                                        CPF
                                    </label>
                                    <span asp-validation-for="CPF" class="text-danger small ms-3"></span>
                                </div>
                            </div>
                        </div>

                        <div class="card-footer px-0 py-3 bg-transparent">
                            <div class="d-flex gap-2 justify-content-between">
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left me-1"></i>
                                    Voltar
                                </a>
                                <div class="btn-group">
                                    <button type="submit" class="btn btn-warning">
                                        <i class="bi bi-save me-1"></i>
                                        Salvar Alterações
                                    </button>
                                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                                        <i class="bi bi-trash me-1"></i>
                                        Excluir
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-3">
                <small class="text-muted">
                    <i class="bi bi-info-circle me-1"></i>
                    Edite as informações do cliente
                </small>
            </div>
        </div>
    </div>
</div>

<style>

    .form-floating label {
        color: #495057;
    }

    .form-control:focus {
        border-color: #86b7fe;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }

    .btn-primary {
        background: #0d6efd;
        border: none;
    }

        .btn-primary:hover {
            background: #0b5ed7;
        }
</style>


@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}