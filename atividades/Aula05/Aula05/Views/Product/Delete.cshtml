@model Model.Product

@{
    ViewData["Title"] = "Excluir Produto";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="text-center mb-4">
                <i class="bi bi-exclamation-triangle-fill text-danger" style="font-size: 2.5rem;"></i>
                <h2 class="text-danger fw-bold mt-3">Confirmar Exclusão</h2>
                <p class="text-muted">Esta ação não pode ser desfeita</p>
            </div>

            <div class="card border-danger shadow-sm">
                <div class="card-header bg-danger text-white d-flex align-items-center">
                    <i class="bi bi-trash-fill me-2"></i>
                    <h4 class="mb-0">Atenção: Exclusão Permanente</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning mb-4">
                        <i class="bi bi-exclamation-circle-fill me-2"></i>
                        Você está prestes a excluir permanentemente o cliente abaixo:
                    </div>

                    <div class="product-details p-4 bg-light rounded">
                        <div class="row mb-3">
                            <div class="col-md-4 fw-bold text-end">ID:</div>
                            <div class="col-md-8">
                                <span class="badge bg-secondary">@Model.Id</span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-4 fw-bold text-end">Nome:</div>
                            <div class="col-md-8">
                                <span class="fs-5">@Model.ProductName</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <form asp-action="ConfirmDelete" method="post" class="mt-4">
                <input type="hidden" asp-for="Id" />

                <div class="d-grid gap-3 d-md-flex justify-content-md-end">
                    <a asp-action="Index" class="btn btn-outline-secondary me-md-2">
                        <i class="bi bi-arrow-left-circle"></i> Voltar
                    </a>
                    <button type="submit" class="btn btn-danger px-4">
                        <i class="bi bi-trash3-fill"></i> Confirmar Exclusão
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
<style>
    .product-details {
        border-left: 4px solid #dc3545;
    }

    .card {
        border-width: 2px;
    }

    .btn-outline-secondary:hover {
        background-color: #f8f9fa;
    }
</style>