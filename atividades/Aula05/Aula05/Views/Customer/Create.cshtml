@model Model.Customer

@{
    ViewData["Title"] = "Cadastro de Cliente";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">
                        <i class="bi bi-person-plus"></i> Cadastro de Cliente
                    </h3>
                </div>
                <div class="card-body">
                    <form id="formCustomer" method="post" asp-action="Create" asp-controller="Customer">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Nome completo</label>
                            <input type="text" class="form-control" asp-for="Name" placeholder="Ex: João Silva" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" asp-controller="Customer" class="btn btn-outline-secondary me-md-2">
                                <i class="bi bi-arrow-left"></i> Voltar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Cadastrar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">