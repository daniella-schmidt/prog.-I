@model List<Model.Customer>
@{
    ViewData["Title"] = "Lista de Clientes";
}


<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Clientes Cadastrados</h2>
        <a asp-action="Create" asp-controller="Customer" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Novo Cliente
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Nome</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var customer in Model)
                    {
                        <tr>
                            <td>@customer.Id</td>
                            <td>@customer.Name</td>
                            <td>
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@customer.Id" class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-controller="Customer" asp-route-id="@customer.Id"
                                       title="Excluir Customer @customer.Name"
                                       class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            Nenhum cliente cadastrado.
        </div>
    }
    <a asp-action="ExportDelimitadedFile" asp-controller="Customer" class="btn btn-primary">
        <i class="bi bi-file-earmark-arrow-down"></i> Exportar Delimitado
    </a>
    <a asp-action="ExportFixedFile" asp-controller="Customer" class="btn btn-primary">
        <i class="bi bi-file-earmark-arrow-up"></i> Exportar Fixo
    </a>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">